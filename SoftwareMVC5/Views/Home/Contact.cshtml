@model List<SoftwareMVC5.Models.Pelicula>


@{
    ViewBag.Title = "Contact";

    
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>
<h3>@ViewData["ezequielMensaje"]</h3>



<div>
    Mostrando @Model.Count  Peliculas <!--Determina la cantidad elementos que tiene la lista-->
</div>

<table class="table table-striped" >
    <thead>
        <tr>
            <td>Titulo</td>
            <td>Genero</td>
        </tr>
    </thead>

    <tbody>
       @foreach (var item in Model)
       {

           <!---Condicion para determinar si la Pelicula esta disponible
               y que cambie de color en ese caso con una 
               clase de CSS si esta en cartelera o no-->

           <!--var claseFila = string.Empty;

