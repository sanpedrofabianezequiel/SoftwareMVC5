           {
               claseFila = "danger";--><!--Clase de Boostrap-->
           <!--}
           else
           {
               claseFila = "sucess";//Clase de Boostrap
           }-->

           //Operador ternario
           //Comentarios en Razon
           @*Se coloca la clase DANGER si la pelicula no esta en cartelera*@
           var claseFila = (item.EstaEnCartelera) ? string.Empty : "danger";


           <tr class="@claseFila">
               <td>@item.Titulo</td>
               <td>@item.Genero</td>
           </tr>

       }
    </tbody>
</table>

