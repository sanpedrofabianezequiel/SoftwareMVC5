@model DateTime?

@if (!Model.HasValue)<!--Si no viene vacio-->
{
<input type="date" name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" 
       value=""id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"/> 
}
else
{<!--Si no viene vacio-->
<input type="date" name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")"
       value="@Model.Value.ToString("dd/MM/yyyy")" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"/>
}